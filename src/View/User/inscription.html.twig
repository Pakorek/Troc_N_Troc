{% extends "layout.html.twig" %}


{% block title %} Inscription {% endblock %}

{% block content %}
<section id="inscription">
    //modal-head
    <h1>Formulaire d'inscription</h1>
    <p>Lorem ipsum</p>

    //modal-body
    <form action="" method="POST">

        <label for="pseudo">Un nom</label>
        <input type="text" name="pseudo" id="pseudo" placeholder="" required>
        <span></span>

        <label for="mail">Un mail</label>
        <input type="email" name="mail" id="mail" placeholder="" required>
        <p></p>

        <label for="pass">Mot de passe</label>
        <input type="password" name="pass" id="pass" placeholder="" required>

        <label for="pass2"></label>
        <input type="password" name="pass2" id="pass2" placeholder="Vérification Mot de Passe" required>

        <span>
            <input type="checkbox" name="condition" id="condition" required>
            <label for="condition">"J'accepte les <a href="">conditions générales d'utilisation</a>"</label>
        </span>
        <button type="submit">Créer mon compte</button>

    </form>
</section>
{% endblock %}


