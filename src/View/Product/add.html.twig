{% extends "layout.html.twig" %}

{% block stylesheet %}
    <style>
        blockquote {
            text-align: center;
            font-size: 0.8em;
            padding: 20px;
        }

    </style>
{% endblock %}


{% block content %}
    {% include '_nav_retour.html.twig' %}
    {% include '_nav_bar.html.twig' %}
    {% if session is empty %}
        <blockquote>
            Vous devez être connecté pour publier une annonce :)
            Rendez-vous ici pour profiter de toutes les fonctionnalités du site
        </blockquote>

    {% endif %}
    {% if var == 'bien' %}
        {% include 'Product/_formGood.html.twig' %}
    {% elseif var == 'service' %}
        {% include 'Product/_formService.html.twig' %}
    {% endif %}
{% endblock %}

