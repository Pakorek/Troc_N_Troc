{% extends 'layout.html.twig' %}

{% block title %}
   Liste des biens
{% endblock %}


{% block header %}
    <h1>Liste des biens</h1>
{% endblock %}

{% block content %}

    <h1>Liste des biens</h1>
        <div class="container container_listProduct">
            {% for product in products %}

                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4 col_listProduct">
                            <img src="..." class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.title }}</h5>
                                <p class="card-text">{{ product.description }}</p>
                                <p class="card-text"><small class="text-muted">Date de Parution : {{ product.created_at }}</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

{% endblock %}

