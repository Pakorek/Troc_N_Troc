{% import 'Product/formTemplate.html.twig' as form %}

<div class="container-fluid">
    <form action="" method="post">
        <div class="form-group">
            {{ form.input('text', 'form-control','title', 'Titre de votre annonce', 'ex.: 2h de bêchage') }}
            {% if errors.title is defined %}<span style="color: red"> {{ errors.title }}</span> {% endif %}
        </div>
        <div class="form-group">
            <label>Quel type de service proposez-vous ?</label>

            {{ form.select('form-control', 'category-select','Choisissez une catégorie') }}
            {{ form.select('form-control', 'subcategory-select','Choisissez une sous-catégorie') }}
        </div>
        <div class="form-group">
            {{ form.textarea('form-control','description', 'Description du service', 'Précisez si besoin, et n\'oubliez pas de donner vos disponibilités !') }}
        </div>
        <div class="form-group">
            {{ form.radio('echangeOuDon', 'echange', 'Echange', 'checked') }}
            {{ form.radio('echangeOuDon', 'don', 'Don', '') }}
        </div>
        <!--TODO hiddenIfDon à cacher si 'don' est coché (JS)-->
        <div class="form-group hiddenIfDon">
            {{ form.input('text', 'form-control','enEchangeDe', 'Ou en échange de', 'Précisez ici le(s) bien(s)/service(s) souhaité(s) en échange') }}
        </div>
        <div class="form-group form-check hiddenIfDon">
            <input type="checkbox" class="form-check-input" id="check-autres" name="proposition">
            <label class="form-check-label" for="check-autres">Vous êtes ouvert.e à toute proposition</label>
        </div>
        <div class="buttons">
            <button type="button" class="btn btn-outline-primary">Aperçu</button>
            <button type="submit" class="btn btn-primary">Publier !</button>
        </div>
    </form>
</div>