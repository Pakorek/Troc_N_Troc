{% extends "layout.html.twig" %}

{% block title %}
    Faire une offre
{% endblock %}

{% block stylesheet %}
    <style>
        .container-fluid {
            width: 70%;
            margin: auto auto;
        }

        .row {
            width: 80%;
        }

        .card-body {
            display: flex;
        }

        img {
        }

    </style>
{% endblock %}

{% block content %}
    {% include '_nav_retour.html.twig' %}
    {% include '_nav_bar.html.twig' %}
    <section class="container-fluid">
        <h1>Faire une offre</h1>
        <div class="row">
                <div class="col-md-6">
                    <div class="card mx-auto">
                        <div class="card-body">
                            <img src="{{ details.0.img }}" class="card-img" alt="Photo de {{ product.title }}" >
                            <div>
                                <h4 class="card-title">{{ details.0.title }}</h4>
                                <span class="badge badge-success">{{ details.0.deal_type }}</span>
                                <p class="card-text">{{ details.0.description }}</p>
                                {#                            <p class="card-text"><small class="text-muted">Date de Parution : {{ product.created_at|date("m/d/Y") }}</small></p>#}
                            </div>
                            <img src="/assets/images/heart.png" width="40px">
                            <a href="/product/details/{{ id }}" class="stretched-link"></a>
                        </div>
                    </div>
                </div>
        </div>
        <form action="mailto:brice.darmenia@sfr.fr" method="post" enctype="text/plain">
            <label for="message">Votre message :</label>
            <textarea type="text" name="message" id="message" rows="12"></textarea>
            <button type="submit" class="btn btn-success">Envoyer</button>
        </form>
    </section>

{% endblock %}

