{% extends "layout.html.twig" %}

{% block title %}{{ details.0.title }}{% endblock %}

{% block stylesheet %}
    <style>

        #main {
            width: 100%;
            margin: 50px auto 100px auto;
        }

        header, #user, #localisation, #echange > article,
        #action, #ad {
            box-shadow: 0 2px 3px #999;
            background-color: white;
        }

        header {
            margin-bottom: 5px;
        }

        #ad > img {
            width: 100%;
            height: auto;
            padding: 20px;
            margin: auto auto;
        }

        #action {
            display: flex;
            margin-top: 10px;
            padding: 10px;
        }

        aside > section > img {
            width: 26px;
            height: 26px;
            margin: auto auto auto 10px;
        }

        a {
            width: 80%;
        }

        button {
            width: 100%;
        }

        #core > div > div:first-of-type {
            align-self: center;
            padding: 0px;
            margin-top: 10px;
        }

        #core > div {
            display: flex;
            flex-direction: column-reverse;
        }

        #echange > article {
            padding: 10px;
            margin-bottom: 10px;
        }

        #action > a > button:last-of-type {
            display: none;
        }


        @media (min-width: 768px) {

            a {
                width: 100%;
            }

            #core {
                padding-right: 0px;
            }

            #core > div {
                flex-direction: row;
            }

            #echange {
                margin-left: 10px;
            }

            #ad {
                margin-left: 20px;
            }

            aside {
                padding-left: 0px!important;
            }

            #action > img {
                display: none;
            }

            #action > a > button:last-of-type {
                display: block;
            }




        }

        @media (min-width: 992px) {
            #main {
                width: 90%;
            }
        }


    </style>
{% endblock %}

{% block content %}
    {% include '_nav_retour.html.twig' %}
    {% include '_nav_bar.html.twig' %}
    <section class="container-fluid" id="main">
        <div class="row">
            <div class="col-md-9" id="core">
                <div class="row">
                    <div class="col-md-3" id="echange">
                        <article>
                            <h5>En echange</h5>
                            {% if details.0.deal_type == 'echange' %}
                                <p>{{ details.0.enEchangeDe }}</p>
                                <p>{{ details.0.proposition }}</p>
                            {% else %}
                                <p>Rien du tout :)</p>
                                <p>(Un sourire tout au plus)</p>
                            {% endif %}
                        </article>
                    </div>
                    <div class="col-md-8" id="ad">
                        <img src="{{ details.0.img }}" alt="">
                        <article>
                            <h1>{{ details.0.title }}</h1>
                            <h5>{{ details.0.name }}</h5>
                            <h6>Etat</h6>
                            <p>{{ details.0.description }}</p>
                            <p>{{ details.0.created_at }}</p>
                        </article>
                    </div>
                </div>
            </div>
            <aside class="col-md-3">
                <article id="user">
                    <img src="" alt="Photo Profil">
                    <h3>{{ details.0.nickname }}</h3>
                </article>
                <article id="localisation">
                    <h3>Localisation</h3>
                    <p>{{ details.0.zip_code }}</p>
                    <iframe src="" frameborder="0"></iframe>
                </article>
                <section class="container-fluid" id="action">
                    <img src="/assets/images/heart.png" alt="favoris" title="Ajouter aux Favoris">
                    <a href="/product/offre/{{ id }}">
                        <button type="button" class="btn btn-success btn-lg">Faire un Troc</button>
                        <button type="button" class="btn btn-outline-success btn-sm">Mettre en favoris</button>
                    </a>
                </section>
            </aside>
        </div>
    </section>

{% endblock %}

