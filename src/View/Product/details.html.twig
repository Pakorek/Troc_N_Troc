{% extends "layout.html.twig" %}

{% block title %}{{ details.0.title }}{% endblock %}

{% block stylesheet %}
    <style>

        #main {
            width: 100%;
            margin: 30px auto 100px auto;
        }

        header, #user, #localisation, #echange > article,
        #action, #ad {
            box-shadow: 0 3px 3px #999;
            background-color: white;
        }

        header {
            margin-bottom: 5px;
        }

        #ad {
            margin-bottom: 10px;
        }

        #ad > img {
            width: 100%;
            height: auto;
            padding: 20px;
            margin: auto auto;
        }

        #action {
            display: flex;
            margin-top: 10px;
            padding: 10px;
        }

        aside > section > img {
            width: 26px;
            height: 26px;
            margin: auto auto auto 10px;
        }

        a {
            width: 80%;
        }

        button {
            width: 100%;
            background-color: #f59800;
            color: #FFF;
            padding: 10px 0;
            border-radius: 5px;
            text-transform: uppercase;
            font-weight: 600;
        }

        /*#core > div > div:first-of-type {*/
        /*    align-self: center;*/
        /*    padding: 0px;*/
        /*    margin-top: 10px;*/
        /*}*/

        #core > div {
            display: flex;
            flex-direction: column-reverse;
        }

        #echange {
            padding: 0px;
        }

        #echange > article {
            padding: 10px;
            margin-bottom: 10px;
        }
        #echange article h4 {
            font-family: 'Fredericka the Great', cursive;
            font-weight: 600;
        }

        .breadcrumb {
            background-color: transparent;
        }


        @media (min-width: 768px) {

            #main {
                margin-top: 20px;
                width: 70%;
            }

            a {
                width: 100%;
            }

            #core {
                padding-right: 0px;
            }

            #core > div {
                flex-direction: row;
            }

            #echange {
                margin-left: 10px;
            }

            #ad {
                margin-left: 20px;
            }
            #ad > img {
                width: 300px;
            }

            aside {
                padding-left: 0px!important;
            }

            #action > img {
                display: none;
            }

            #action > a > button:last-of-type {
                display: block;
            }
        }

        #map {
            height: 100%;
        }
        #row_map {
            height: 200px;
        }

        #user {
            display: flex;
            width: 100%;
            margin-bottom: 10px;
            padding: 10px;
            align-items: center;
        }
        #user > h4 {
            margin-left: 10px;
        }


    </style>
{% endblock %}

{% block content %}
    <main class="container-fluid">
        {% include '_nav_retour.html.twig' %}
        {% include 'arianne.html.twig' %}
        <section class="container-fluid" id="main">
            <div class="row">
                <div class="col-md-9" id="core">
                    <div class="row">
                        <div class="col-md-3" id="echange">
                            <article>
                                <h4>En echange</h4>
                                <hr>
                                {% if details.0.deal_type == 'echange' %}
                                    <p>{{ details.0.enEchangeDe }}</p>
                                    <p>{{ details.0.proposition }}</p>
                                {% else %}
                                    <p>Rien du tout :)</p>
                                    <p>(Un sourire tout au plus)</p>
                                {% endif %}
                            </article>
                        </div>
                        <div class="col-md-8" id="ad">
                            <img src="{{ details.0.img }}" alt="">
                            <article>
                                <h1>{{ details.0.title }}</h1>
                                <h5>{{ details.0.name }}</h5>
                                <h6>Etat</h6>
                                <p>{{ details.0.description }}</p>
                                <p>{{ details.0.created_at }}</p>
                            </article>
                        </div>
                    </div>
                </div>
                <aside class="col-md-3">
                    <article id="user">
                        <img src="/assets/images/icons/profil.png" alt="Photo Profil">
                        <h4>{{ details.0.nickname }}</h4>
                    </article>
                    <article id="localisation">
                        <h3>Localisation</h3>
                        <p>{{ details.0.zip_code }}</p>
                        <div class="row" id="row_map">
                            <div class="col-12">
                                <div id="map"></div>
                            </div>
                        </div>
                    </article>
                    <section class="container-fluid" id="action">
                        <img src="/assets/images/heart.png" alt="favoris" title="Ajouter aux Favoris">
                        <a href="/product/offre/{{ id }}">
                            <button type="button" >Faire un Troc</button>
                        </a>
                    </section>
                </aside>
            </div>
        </section>

    </main>

{% endblock %}

{% block javascripts %}
    <script>
        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 8,
                center: {lat: -34.397, lng: 150.644}
            });
            var geocoder = new google.maps.Geocoder();

            document.getElementById('submit').addEventListener('click', function() {
                geocodeAddress(geocoder, map);
            });
        }

        function geocodeAddress(geocoder, resultsMap) {
            var address = document.getElementById('address').value;
            geocoder.geocode({'address': address}, function(results, status) {
                if (status === 'OK') {
                    resultsMap.setCenter(results[0].geometry.location);
                    var marker = new google.maps.Marker({
                        map: resultsMap,
                        position: results[0].geometry.location
                    });
                } else {
                    alert('Geocode was not successful for the following reason: ' + status);
                }
            });
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAVaXQaad_Vg7tnUN45WoFZoM3ACOc80Qs&callback=initMap">
    </script>
{% endblock %}

